<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
  <!-- Scripts -->
  <script src="//code.jquery.com/jquery-3.7.1.js"></script>
  <script src="//cdn.datatables.net/2.3.7/js/dataTables.js"></script>
  <!-- Styles -->
  <link href="https://cdn.datatables.net/2.3.7/css/dataTables.dataTables.css" rel="stylesheet">
</head>

<body>
  <table id="order-table" class="display">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Flavor</th>
      <th>Cone</th>
      <th>Toppings</th>
      <th>Comments</th>
      <th>Timestamp</th>
    </thead>
    <tbody>
        <% orders.forEach(order =>{%>
            <tr>
                <td><%=order.name%></td>
                <td><%=order.email%></td>
                <td><%=order.flavor%></td>
                <td><%=order.cone%></td>
                <td><%=order.toppings%></td>
                <td><%=order.comment%></td>
                <td><%=order.timestamp.toLocaleString()%></td>
            </tr>
        <%});%>
    </tbody>
  </table>

  <script defer>
    let table = new DataTable('#order-table');
  </script>
</body>

</html>